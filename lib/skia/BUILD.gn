source_set("fonts") {
  sources = [
    "skia_font_loader.cc",
    "skia_font_loader.h",
  ]

  deps = [
    ":type_converters",
    ":vmo",
    "//lib/ftl",
    "//mojo/public/cpp/application",
    "//mojo/public/interfaces/application",
    "//mojo/services/ui/fonts/interfaces",
    "//third_party/skia",
  ]
}

source_set("type_converters") {
  sources = [
    "type_converters.cc",
    "type_converters.h",
  ]

  deps = [
    "//mojo/services/geometry/interfaces",
    "//third_party/skia",
  ]
}

source_set("vmo") {
  sources = [
    "skia_vmo_data.cc",
    "skia_vmo_data.h",
    "skia_vmo_image.cc",
    "skia_vmo_image.h",
    "skia_vmo_surface.cc",
    "skia_vmo_surface.h",
  ]

  deps = [
    "//apps/mozart/services/composition/interfaces",
    "//lib/ftl",
    "//lib/mtl",
    "//third_party/skia",
  ]
}
