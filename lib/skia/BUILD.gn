group("skia") {
  public_deps = [
    ":fonts",
    ":type_converters",
    ":vmo",
  ]
}

source_set("fonts") {
  sources = [
    "skia_font_loader.cc",
    "skia_font_loader.h",
  ]

  deps = [
    ":type_converters",
    ":vmo",
    "//apps/fonts/services",
    "//lib/ftl",
    "//third_party/skia",
  ]
}

source_set("type_converters") {
  sources = [
    "type_converters.cc",
    "type_converters.h",
  ]

  public_deps = [
    "//apps/mozart/services/geometry",
    "//third_party/skia",
  ]
}

source_set("vmo") {
  sources = [
    "skia_vmo_data.cc",
    "skia_vmo_data.h",
    "skia_vmo_image.cc",
    "skia_vmo_image.h",
    "skia_vmo_surface.cc",
    "skia_vmo_surface.h",
  ]

  public_deps = [
    "//apps/mozart/services/composition",
    "//lib/ftl",
    "//magenta/system/ulib/mx",
    "//third_party/skia",
  ]
}
