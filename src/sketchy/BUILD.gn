executable("sketchy") {
  output_name = "sketchy_service"

  sources = [
    "app.cc",
    "app.h",
    "buffer.cc",
    "buffer.h",
    "canvas.cc",
    "canvas.h",
    "main.cc",
    "resources/import_node.cc",
    "resources/import_node.h",
    "resources/resource.cc",
    "resources/resource.h",
    "resources/resource_map.cc",
    "resources/resource_map.h",
    "resources/stroke_group.cc",
    "resources/stroke_group.h",
    "resources/types.h",
  ]

  deps = [
    "//application/lib/app",
    "//apps/mozart/lib/scene:client",
    "//apps/mozart/services/fun/sketchy",
    "//apps/tracing/lib/trace:provider",
    "//lib/escher/escher",
  ]
}
