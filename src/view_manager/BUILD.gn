executable("view_manager") {
  output_name = "view_manager_service"

  sources = [
    "main.cc",
  ]

  deps = [
    ":lib",
  ]
}

source_set("lib") {
  sources = [
    "view_associate_table.cc",
    "view_associate_table.h",
    "view_container_state.cc",
    "view_container_state.h",
    "view_impl.cc",
    "view_impl.h",
    "view_manager_app.cc",
    "view_manager_app.h",
    "view_manager_impl.cc",
    "view_manager_impl.h",
    "view_registry.cc",
    "view_registry.h",
    "view_state.cc",
    "view_state.h",
    "view_stub.cc",
    "view_stub.h",
    "view_tree_impl.cc",
    "view_tree_impl.h",
    "view_tree_state.cc",
    "view_tree_state.h",
  ]

  public_deps = [
    "//apps/modular/lib/app",
    "//apps/mozart/glue/base",
    "//apps/mozart/services/composition",
    "//apps/mozart/services/composition/cpp",
    "//apps/mozart/services/geometry/cpp",
    "//apps/mozart/services/views",
    "//apps/mozart/services/views/cpp",
    "//lib/ftl",
    "//lib/mtl",
    "//lib/fidl/cpp/bindings",
  ]
}

