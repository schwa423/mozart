  sources = [
    "config.cc",
    "config.h",
    "input_connection_impl.cc",
    "input_connection_impl.h",
    "input_dispatcher_impl.cc",
    "input_dispatcher_impl.h",
    "params.cc",
    "params.h",
    "view_container_state.cc",
    "view_container_state.h",
    "view_hit_resolver.cc",
    "view_hit_resolver.h",
    "view_impl.cc",
    "view_impl.h",
    "view_manager_app.cc",
    "view_manager_app.h",
    "view_manager_impl.cc",
    "view_manager_impl.h",
    "view_registry.cc",
    "view_registry.h",
    "view_state.cc",
    "view_state.h",
    "view_stub.cc",
    "view_stub.h",
    "view_tree_impl.cc",
    "view_tree_impl.h",
    "view_tree_state.cc",
    "view_tree_state.h",
  ]

  public_deps = [
    "//application/lib/app",
    "//apps/modular/lib/rapidjson",
    "//apps/mozart/lib/view_associate_framework",
    "//apps/mozart/services/composition",
    "//apps/mozart/services/composition/cpp",
    "//apps/mozart/services/geometry/cpp",
    "//apps/mozart/services/input",
    "//apps/mozart/services/input/cpp",
    "//apps/mozart/services/views",
    "//apps/mozart/services/views/cpp",
    "//apps/tracing/lib/trace:provider",
