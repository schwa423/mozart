    "view_manager_test.cc",
    "test_with_message_loop.cc",
    "test_with_message_loop.h",
    "main.cc",
  ]

  deps = [
    "mocks",
    "//apps/mozart/src/view_manager:lib",
    "//apps/mozart/lib/view_associate_framework:mocks",
    "//lib/fidl/cpp/bindings",
    "//lib/fidl/cpp/bindings:bindings",
    "//third_party/gtest"
  ]
