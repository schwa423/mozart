module sketchy;

import "apps/mozart/services/scenic/types.fidl";

struct Touch {
  scenic.vec2 position;
  uint32 nanoseconds;
  float pressure;
};

struct CubicBezier2 {
  scenic.vec2 pt0;
  scenic.vec2 pt1;
  scenic.vec2 pt2;
  scenic.vec2 pt3;
};

struct StrokePath {
  array<CubicBezier2> segments;
};
